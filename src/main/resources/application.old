# Database configuration
spring.datasource.url=jdbc:oracle:thin:@//localhost:1521/gdnDB
spring.datasource.username=gdn
spring.datasource.password=oracle
spring.datasource.driver-class-name=oracle.jdbc.OracleDriver
app.main.db.port=1521

# Server configuration
server.port=8081

#Vaadin configuration
vaadin.launch-browser=true
vaadin.allowed-packages=com.vaadin,org.vaadin,at.gdn
vaadin.pnpm.enable=true
vaadin.theme=gdn

# JPA configuration
spring.jpa.open-in-view=false
spring.jpa.properties.ddl-auto=validate


